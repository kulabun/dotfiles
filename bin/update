#!/usr/bin/env fish
echo "Updating dotfiles"
yadm pull origin master
#yadm decrypt

echo "Updating fishshell plugins"
fisher

echo "Updating VIM Plugins"
vim +BundleInstall +BundleUpdate +qall

echo "Updating VSCode extensions"
cat ~/.vscode/extensions.list | xargs -L 1 code --install-extension

echo "Update global NPM packages"
sudo npm update --unsafe-perm -g

source $HOME/bin/update.local
