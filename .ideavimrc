get history = 1000      "number of command-lines that are remembered
set hlsearch            "highlight matches with last search pattern
set ignorecase          "ignore case in search patterns
set incsearch           "show where search pattern typed so far matches
set number              "print the line number in front of each line
set relativenumber      "show the line number relative too the line with the cursor
set scrolloff = 3       "minimum nr. of lines above and below cursor
set showmode            "message on status line to show current mode
set sidescrolloff = 5   "min. nr. of columns to left and right of cursor
set smartcase           "no ignore case when pattern has uppercase
set undolevels = 1000   "maximum number of changes that can be undone
set visualbell          "use visual bell instead of beeping
set wrapscan            "searches wrap around the end of the file
set surround            "enable surround plugin

let mapleader = "h"
nnoremap j h
nnoremap k j
nnoremap l k
nnoremap ; l
inoremap jj <esc>

nnoremap ga :action GotoAction<cr>
nnoremap gc :action GotoClass<cr>
nnoremap gf :action GotoFile<cr>
nnoremap gu :action ShowUsages<cr>
nnoremap gs :action FileStructurePopup<cr>
nnoremap gR :action RecentChangedFiles<cr>
nnoremap gr :action RecentFiles<cr>
nnoremap g, :action Back<cr>
nnoremap g. :action Forward<cr>
nnoremap g. :action Forward<cr>
nnoremap g[ :action GotoSuperMethod<cr>
nnoremap g] :action GotoImplementation<cr>
nnoremap gbb :action GotoPreviousBookmark<cr>
nnoremap gbn :action GotoNextBookmark<cr>
nnoremap gep :action GotoPreviousError<cr>
nnoremap gen :action GotoNextError<cr>

nnoremap fu :action FindUsages<cr>
nnoremap fe :action SearchEverywhere<cr>
nnoremap ff :action FindInPath<cr>

nnoremap [m :action MethodUp<cr>
nnoremap ]m :action MethodDown<cr>
nnoremap [c :action VcsShowPrevChangeMarker<cr>
nnoremap ]c :action VcsShowNextChangeMarker<cr>

nnoremap <leader>rr :action RenameElement<cr>
nnoremap <leader>rs :action ChangeSignature<cr>
nnoremap <leader>gg :action Generate<cr>
nnoremap <leader>gn :action NewClass<cr>
nnoremap <leader>gmo :action OverrideMethods<cr>
nnoremap <leader>gmd :action DelegateMethods<cr>
nnoremap <leader>gmc :action GenerateConstructor<cr>
nnoremap <leader>gmg :action GenerateGetter<cr>
nnoremap <leader>gms :action GenerateSetter<cr>
nnoremap <leader>gma :action GenerateGetterAndSetter<cr>
nnoremap <leader>gma :action ImplementMethods<cr>
nnoremap <leader>s :action SurroundWith<cr>

nnoremap <leader>= :action ReformatCode<cr>
nnoremap <leader>q :action CloseContent<cr>
nnoremap <leader>Q :action ReopenClosedTab<cr>
nnoremap <leader>h :action QuickJavaDoc<cr>

