#!/bin/bash

{
    echo "power on"
    echo "agent on"
} | bluetoothctl > /dev/null

addr=$(\
    {
        echo "scan on"
        sleep 5s
        echo "scan off"
        echo "devices"
    } | bluetoothctl \
        | egrep "^Device" \
        | cut -d" " -f2,3 \
        | sed "s/\([0-9:A-F]\{17\}\) \(.*\)/\2 - \1/g" \
        | column -t \
        | rofi -dmenu \
        | sed "s/\s\+/ /g" \
        | cut -d" " -f3
)

{
    echo "pair $addr"
    echo "trust $addr"
    echo "connect $addr"
} | bluetoothctl > /dev/null
